<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<%= form_for :session, url: sessions_path, :html => {:class => 'form-horizontal', :role => 'form'} do |f| %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.label :username, :class => 'col-sm-2 control-label', :for => 'inputPassword1' %>
        <div class="col-sm-10">
          <%= f.text_field :username, :id => 'inputPassword1', :class => 'form-control', :placeholder => 'Password' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.label :password, :class => 'col-sm-2 control-label', :for => 'inputPassword2' %>
        <div class="col-sm-10">
          <%= f.password_field :password, :id => 'inputPassword2', :class => 'form-control', :placeholder => 'Password' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Sign in', class: 'btn btn-large btn-primary' %>
      </div>
    </div>
<% end %>
