<%= render :partial => 'layouts/messages', flash: flash %>

<h1>Materiais (<%= @materials.count %>)</h1>

<%= render :partial => 'layouts/tablesearch', locals: {:path => materials_path, :placeholder => 'Material'} %>

<table class="table table-striped"> <!-- table-condensed -->

  <div class="pagination">  <!-- Try apple_pagination, digg_pagination -->
    <%= will_paginate(@cautelas, renderer: BootstrapPagination::Rails) %>
  </div>

  <thead>
  <tr>
    <th>#</th>
    <th>Tipo</th>
    <th>Codigo</th>
    <th>Descrição</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @materials.each do |material| %>
      <tr>
        <td><%= link_to material.id, material %></td>
        <td><%= link_to material.tipo, material %></td>
        <td><%= link_to material.codigo, material %></td>
        <td><%= link_to material.nome, material %></td>
        <td><%= link_to 'Editar', edit_material_path(material), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Excluir', material, method: :delete, data: {confirm: 'Confirma a exclusão?'}, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Novo Material', new_material_path, :class => 'btn' %>
