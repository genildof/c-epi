<% provide(:title, 'Materiais') %>

<ul class="nav nav-pills nav-stacked">
  <li class="active">
    <span class="badge pull-right"><%= @materials.count %></span>
    <span class="glyphicon glyphicon-search"></span>

    <h3>Materiais</h3>
    </a>
  </li>
</ul>

<%= render :partial => 'layouts/tablesearch', locals: {:path => materials_path, :placeholder => 'Material'} %>

<table class="table table-striped"> <!-- table-condensed -->

  <div class="pagination">  <!-- Try apple_pagination, digg_pagination -->
    <%= will_paginate(@cautelas, renderer: BootstrapPagination::Rails) %>
  </div>

  <thead>
  <tr>
    <th>#</th>
    <th>Tipo</th>
    <th>Codigo</th>
    <th>Descrição</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @materials.each do |material| %>
      <tr>
        <td><%= link_to material.id, material %></td>
        <td><%= link_to material.tipo, material %></td>
        <td><%= link_to material.codigo, material %></td>
        <td><%= link_to material.nome, material %></td>
        <td><%= link_to 'Editar', edit_material_path(material), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Excluir', material, method: :delete, data: {confirm: 'Confirma a exclusão?'}, :class => 'btn btn-danger btn-xs' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Novo Material', new_material_path, :class => 'btn btn-default' %>
