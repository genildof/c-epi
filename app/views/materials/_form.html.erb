<div class="row">
  <div class="span6 offset3">

    <%= simple_form_for @material, :html => {:class => 'form-horizontal'} do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <!--
        legend>%= controller.action_name.capitalize %> Fabrica</legend
        -->

        <div class="control-group">
          <%= f.label :tipo, :class => 'control-label' %>
          <div class="controls">
            <%= f.select :tipo, %w(EPI EQUIPAMENTO FERRAMENTAL), :class => 'text-field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :codigo, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :codigo %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :nome, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :nome %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
          <%= link_to 'Cancelar', materials_path, :class => 'btn btn-default' %>
        </div>
    <% end %>
  </div>
</div>
