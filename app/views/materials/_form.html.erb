<%= simple_form_for @material, :html => {:class => 'form-horizontal'} do |f| %>
    <% if @material.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@material.errors.count, 'erro') %> impedindo esta ação:</h2>

          <ul>
            <% @material.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <fieldset>
      <!--
      legend>%= controller.action_name.capitalize %> Fabrica</legend
      -->

      <div class="control-group">
        <%= f.label :tipo, :class => 'control-label' %>
        <div class="controls">
          <%= f.select :tipo, %w(EPI EQUIPAMENTO FERRAMENTAL), :class => 'text-field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :codigo, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :codigo %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :nome, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :nome %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
        <%= link_to 'Cancelar', materials_path, :class => 'btn' %>
      </div>
    </fieldset>
<% end %>
