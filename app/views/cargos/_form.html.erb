<div class="row">
  <div class="span6 offset3">

    <%= simple_form_for @cargo, :html => {:class => 'form-horizontal'} do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <div class="control-group">
          <%= f.label :nome, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :nome %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :periculosidade, :class => 'control-label' %>
          <div class="controls">
            <%= f.select :periculosidade, %w(NAO SIM) %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
          <%= link_to 'Cancelar', cargos_path, :class => 'btn' %>
        </div>

    <% end %>
