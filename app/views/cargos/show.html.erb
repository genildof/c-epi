<% provide(:title, @cargo.nome) %>

<div class="row">
  <div class="span6 offset3">

    <p>
      <strong>Nome:</strong>
      <%= @cargo.nome %>
    </p>

    <p>
      <strong>Periculosidade:</strong>
      <%= @cargo.periculosidade %>
    </p>

    <p>
      <b>Created at:</b>
      <%= @cargo.created_at.strftime('%d/%m/%Y - %H:%M') %>
    </p>

    <div class="form-actions">
      <%= link_to 'Editar', edit_cargo_path(@cargo), :class => 'btn' %>
      <%= link_to 'Excluir', @cargo, method: :delete, data: {confirm: 'Confirma a exclusÃ£o?'}, :class => 'btn btn-danger' %>
      <%= link_to 'Voltar', cargos_path, :class => 'btn btn-default' %>
