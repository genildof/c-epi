<% provide(:title, 'Página Inicial') %>

<%= link_to image_tag('gvt_logo.gif', alt: 'C-EPI APP'), root_path %>

<br></br>

<div class="section-colored text-center">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <% unless signed_in? %>
            <p>Você não está logado.</p><%= link_to "Acesse agora!", signin_path, class: "btn btn-large btn-primary" %>
            <hr>
        <% else %>
            <h2>Gestão de Cautelas</h2>
            <p>Página inicial da aplicação <%= link_to "C-EPI Application", root_path %></p>
            <hr>
        <% end %>
      </div>
    </div><!-- /.row -->
  </div><!-- /.container -->
</div><!-- /.section-colored -->


