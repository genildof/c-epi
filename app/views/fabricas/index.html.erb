<% provide(:title, 'Fábricas') %>

<ul class="nav nav-pills nav-stacked">
  <li class="active">
    <span class="badge pull-right"><%= @fabricas.count %></span>
    <span class="glyphicon glyphicon-search"></span>

    <h3>Fábricas</h3>
    </a>
  </li>
</ul>

<%= render :partial => 'layouts/tablesearch', locals: {:path => fabricas_path, :placeholder => 'Fábrica'} %>

<table class="table table-striped"> <!-- table-condensed -->

  <div class="pagination">  <!-- Try apple_pagination, digg_pagination -->
    <%= will_paginate(@cautelas, renderer: BootstrapPagination::Rails) %>
  </div>

  <thead>
  <tr>
    <th>#</th>
    <th>Nome</th>
    <th>Estado</th>
    <th>Created at</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @fabricas.each do |fabrica| %>
      <tr>
        <td><%= link_to fabrica.id, fabrica %></td>
        <td><%= link_to fabrica.nome, fabrica %></td>
        <td><%= fabrica.estado %></td>
        <td><%= fabrica.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= link_to 'Editar', edit_fabrica_path(fabrica), :class => 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Excluir', fabrica, method: :delete, data: {confirm: 'Confirma a exclusão?'}, :class => 'btn btn-danger btn-xs' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Nova Fábrica', new_fabrica_path, :class => 'btn btn-default' %>