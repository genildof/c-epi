<div class="row">
  <div class="span6 offset3">

    <%= simple_form_for @cautela, :html => {:class => 'form-horizontal'} do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <div class="control-group">
          <%= f.label :colaborador, :class => 'control-label' %>
          <div class="controls">
            <%= f.select :colaborador_id, @colaboradors.collect { |a| [a.nome, a.id] }, :class => 'span3' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :user, :class => 'control-label' %>
          <div class="controls">
            <%= f.select :user_id, @users.collect { |a| [a.name, a.id] }, :class => 'text-field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :data, :class => 'control-label' %>
          <div class="controls">
            <%= f.date_select :data, {:order => [:day, :month, :year]}, {:class => 'date-select'} %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :status, :class => 'control-label' %>
          <div class="controls">
            <%= f.select :status, %w(ARQUIVO_LOCAL ENVIADO_CDOC), :class => 'text-field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :comentarios, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :comentarios, :rows => 2, :cols => 70, :class => 'text-field', :placeholder => 'ComentÃ¡rios diversos' %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.submit button_name, :class => 'btn btn-primary' %>
          <%= link_to 'Cancelar', cautelas_path, :class => 'btn' %>
        </div>

    <% end %>
  </div>
</div>
